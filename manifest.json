{
  "manifest_version": 2,
  "name": "FillItUp",
  "version": "0.1.0",
  "description": "Capture filled answers on a Google Form and replay them later with one click.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://docs.google.com/forms/*"
  ],
  "browser_action": {
    "default_title": "FillItUp",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/forms/*"
      ],
      "js": ["content/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "forms-saver@example.com",
      "strict_min_version": "91.0"
    }
  }
}
